@model Instructor_Detials

@{
    ViewData["Title"] = "Add Instructor Details";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Add Instructor Details</h1>

    <form method="POST" action="@Url.Action("Insert", "InstructorDetails")" class="shadow-lg p-4 rounded bg-light">
        <div class="row g-3">
            <!-- Instructor Selection -->
            <div class="col-md-6">
                <label asp-for="User_Id" class="form-label fw-bold">Instructor</label>
                <select asp-for="User_Id" class="form-select" required>
                    <option value="">-- Select Instructor --</option>
                    @if (ViewBag.Instructors != null)
                    {
                        foreach (var instructor in ViewBag.Instructors)
                        {
                            <option value="@instructor.Id">@($"{instructor.Fname} {instructor.Lname}")</option>
                        }
                    }
                    else
                    {
                        <option disabled>No instructors available</option>
                    }

                </select>
            </div>

            <!-- Track Selection -->
            <div class="col-md-6">
                <label asp-for="Track_Id" class="form-label fw-bold">Track</label>
                <select asp-for="Track_Id" class="form-select" required>
                    <option value="">-- Select Track --</option>

                    @if (ViewBag.Tracks != null)
                    {
                        foreach (var track in ViewBag.Tracks)
                        {
                            <option value="@track.Id">@track.Name</option>
                        }
                    }
                    else
                    {
                        <option disabled>No tracks available</option>
                    }
                    
                </select>
            </div>

            <!-- Course Selection -->
            <div class="col-md-6">
                <label asp-for="Course_Id" class="form-label fw-bold">Course</label>
                <select asp-for="Course_Id" class="form-select" required>
                    <option value="">-- Select Course --</option>

                    @if (ViewBag.Courses != null)
                    {
                        foreach (var course in ViewBag.Courses)
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    }
                    else
                    {
                        <option disabled>No Courses available</option>
                    }
                   
                </select>
            </div>
        </div>



        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4">Add</button>
        </div>
    </form>
</div>
