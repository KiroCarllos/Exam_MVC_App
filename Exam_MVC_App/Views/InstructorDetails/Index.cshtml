@model List<Instructor_Detials>

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container mt-4">
    <h2>Instructor Details</h2>
    <a href="@Url.Action("Add", "InstructorDetails")" class="btn btn-primary">Add Instructor</a>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var instructor in Model)
            {
                <tr>
                    <td>@(instructor.User?.Fname ?? "N/A") @(instructor.User?.Lname ?? "N/A")</td>
                    <td>@(instructor.User?.Role ?? "N/A")</td>
                    <td>@(instructor.User?.Email ?? "N/A")</td>
                    <td>@(instructor.User?.Phone ?? "N/A")</td>
                    <td>
                        <a href="@Url.Action("Details", "InstructorDetails", new { Id = instructor.Id })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", "InstructorDetails", new { Id = instructor.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this instructor?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
