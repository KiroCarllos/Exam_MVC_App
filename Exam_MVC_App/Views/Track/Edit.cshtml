@model Track

@if (Model != null)
{


    ViewData["Title"] = "Edit Track";

    <h1>Edit Track</h1>
    <form method="POST" action="/Track/Update/@Model.Id">
        <input type="hidden" name="_method" value="PUT" />
        <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Hours"></label>
            <input asp-for="Hours" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Mng_Id">Manager</label>
            <select asp-for="Mng_Id" class="form-control">
                @foreach (var manager in ViewBag.Managers)
                {
                    <option value="@manager.Id" selected="@(manager.Id==Model.Mng_Id ? "selected" : null)">
                        @manager.Fname @manager.Lname
                    </option>
                }
            </select>
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

}
else
{
    <h1>Branch not found</h1>
}