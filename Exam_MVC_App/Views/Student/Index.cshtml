@model List<User>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center py-3 bg-white rounded">
        <a href="javascript:history.back()" class="btn btn-light">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h3>Students</h3>
        <a href="@Url.Action("Add", "Student")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add
        </a>
    </div>

    <table class="table table-light table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Branch</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var Student in Model)
            {
                <tr>
                    <td>@Student.Id</td>
                    <td>@Student.Fname @Student.Lname</td>
                    @* <td>@Student.Role</td> *@
                    <td>@Student.Phone</td>
                    <td>@Student.Email</td>
                    @* <td>@Student.Gender</td> *@
                    @* <td> *@
                    @*     @(Student.DateOfBirth != null ? *@
                    @*         (DateTime.Now.Year - Student.DateOfBirth.Value.Year - *@
                    @*         (DateTime.Now.DayOfYear < Student.DateOfBirth.Value.DayOfYear ? 1 : 0)) *@
                    @*         : "N/A") *@
                    @* </td> *@
                    @* <td>@Student.Status</td> *@
                    @* <td>@Student.Salary</td> *@
                    <td>@(Student.Branch != null ? Student.Branch.Name : "No Branch")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Student", new { Id = Student.Id })" class="text-warning mx-2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Index", "StudentCourses", new { id = Student.Id })" class="text-success mx-2">
                            <i class="fas fa-book"></i>
                        </a>

                        <a href="@Url.Action("Details", "Student", new { Id = Student.Id })" class="text-primary mx-2">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="@Url.Action("Delete", "Student", new { Id = Student.Id })"
                           class="text-danger mx-2"
                           onclick="return confirm('Are you sure you want to delete this Student?');">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
