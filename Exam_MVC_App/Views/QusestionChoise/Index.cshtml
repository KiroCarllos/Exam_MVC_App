@model List<Question_Choice>



@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
<div class="container">
<h1>
        All Choises
</h1>
	<table class="table table-light table-hover">
		<thead>
		<th>#</th>
		<th>Choise</th>
		<th>Type</th>
		<th>Qusetion</th>
		<th>Actions</th>
		</thead>
		 <tbody >
			 @foreach(var choise in Model)
			 {
				 <tr>
					<td>@choise.Id</td>
					<td>@choise.Choice</td>
					<td>@choise.Choice_Type</td>
					<td>@choise.Question_Id</td>
					@* <td> *@
					@* 	@(question.Course != null ? $"{question.Course.Name} " : "No course Assigned") *@
					@* </td> *@
					<td>
						<a href="/QusestionChoise/edit/@choise.Id" class="btn btn-secondary">Edit</a>


						<a href="/QusestionChoise/Delete/@choise.Id"
					   class="btn btn-danger"
					   onclick="return confirm('Are you sure you want to delete this Question?');">
						Delete </a>
					</td>
				</tr>
			 }
			</tbody>
	</table>
						
          

<div/>