@model List<Question_Choice>



@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
<div class="container">
	<div class="d-flex justify-content-between">
		<h1>
			All Choises
		</h1>
		<a href="/QusestionChoise/Add/@Model" class="btn btn-dark ">ADD</a>

	</div>

	<table class="table table-light table-hover">
		<thead>
		<th>#</th>
		<th>Choise</th>
		<th>Type</th>
		<th>Qusetion</th>
		<th>Actions</th>
		</thead>
		 <tbody >
			 @foreach(var choise in Model)
			 {
				 <tr>
					<td>@choise.Id</td>
					<td>@choise.Choice</td>
					<td>@choise.Choice_Type</td>
					<td>@choise.Question_Id</td>
					@* <td> *@
					@* 	@(question.Course != null ? $"{question.Course.Name} " : "No course Assigned") *@
					@* </td> *@
					<td>
						<a href="/QusestionChoise/edit/@choise.Id" class="btn btn-secondary"><i class="bi bi-pencil-fill"></i></a>


						<a href="/QusestionChoise/Delete/@choise.Id"
					   class="btn btn-danger"
					   onclick="return confirm('Are you sure you want to delete this Question?');">
							<i class="bi bi-trash"></i>
						</a>
						<a href="/QuestionRightAnswer//@choise.Id"
						   class="btn btn-primary"
						   onclick="return confirm('Are you sure you want to delete this Question?');">
							<i class="bi bi-eye"></i>
						</a>
					</td>
				</tr>
			 }
			</tbody>
	</table>
						
          

<div/>