@model Question_Choice


@if (Model != null)
{


    ViewData["Title"] = "Edit Choise";

    <h1>Edit Choise</h1>
    <form method="POST" action="/QusestionChoise/Update/@Model.Id">
        <input type="hidden" name="_method" value="PUT" />
        <div class="form-group">
            <label asp-for="Choice">Choise </label>
            <input asp-for="Choice" value="@Model.Choice" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Choice_Type">choice Type</label>
            <select asp-for="Choice_Type" class="form-control">

                <option value="text" selected="text">
                    text
                       
                    </option>
                <option value="oral" selected="oral">
                    

                </option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Question_Id">quetion</label>
            <select asp-for="Question_Id" class="form-control">
                @foreach (var Q in ViewBag.question)
                {
                    <option value="@Q.Id" selected="@(Q.Id==Model.Question_Id ? "selected" : null)">
                        @Q.Name 
                    </option>
                }
            </select>
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

}
else
{
    <h1>Branch not found</h1>
}