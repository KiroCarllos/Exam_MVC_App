@model List<Question>


@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
<div class="container">
	<div class="d-flex justify-content-between">

<h2>
        All Questions
</h2>
		<a href="/Questions/Add" type="button" class="btn btn-dark ">ADD</a>

</div>
	<table class="table table-light table-hover">
		<thead>
		<th>#</th>
		<th>Name</th>
		<th>Type</th>
		<th>Type_Multi_Singl</th>
		<th>Course</th>
		<th>Actions</th>
		</thead>
		 <tbody >
			 @foreach(var question in Model)
			 {
				 <tr>
					 <td>@question.Id</td>
					 <td>@question.Name</td>
					 <td>@question.Type</td>
					 <td>@question.Type_Multi_Single</td>
					<td>
						@(question.Course != null ? $"{question.Course.Name} " : "No course Assigned")
					</td>
					<td>
						<a href="/Questions/edit/@question.Id" class="btn btn-secondary"><i class="bi bi-pencil-fill"></i></a>


						<a href="/Questions/Delete/@question.Id"
					   class="btn btn-danger"
					   onclick="return confirm('Are you sure you want to delete this Question?');">
							<i class="bi bi-trash"></i>
						</a>
						<a href="/QuestionRightAnswer//@question.Id"
						   class="btn btn-primary"
						   onclick="return confirm('Are you sure you want to delete this Question?');">
							<i class="bi bi-eye"></i>
						</a>

					</td>
				</tr>
			 }
			</tbody>
	</table>
						
          

<div/>